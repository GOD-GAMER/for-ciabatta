# Copy to .env and fill in values or use the GUI (python -m bot.gui)
TWITCH_TOKEN=oauth:your_oauth_token_here
# Client ID is required only if you click "Get Token" in the GUI (for OAuth implicit flow)
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CHANNEL=yourchannel
BOT_NICK=YourBotName
PREFIX=!

# EventSub (Channel Points) optional
ENABLE_EVENTSUB=false
EVENTSUB_SECRET=changeme
EVENTSUB_PORT=8081
# When using EventSub, expose http://127.0.0.1:8081/eventsub via a public HTTPS tunnel

# Web server settings
WEB_HOST=127.0.0.1
WEB_PORT=8080
# If using the GUI Get Token button, add this redirect URI to your Twitch app:
# http://127.0.0.1:53682/callback